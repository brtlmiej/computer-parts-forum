{% extends './components/layout.njk' %}
{% block body %}
    <div class="container">

        <div class="row">
            {% for product in products %}
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" alt="{{ product.name }}" style="height: 225px; width: 100%; display: block;" src="{{ product.photo }}" data-holder-rendered="true">
                        <div class="card-body">
                            <p class="card-text">{{ product.name }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">9 mins</small>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}